// Community header action with refresh button
.community-header-action {
  display: flex;
  justify-content: flex-end;
  padding: 1rem;
  
  .refresh-button {
    color: $primary-color;
    transition: all 0.2s ease;
    
    &:hover {
      background-color: rgba($primary-color, 0.1);
    }
    
    &[disabled] {
      color: #9CA3AF;
    }
  }
}

// Leave community button container at the bottom
.leave-community-container {
  display: flex;
  justify-content: center;
  margin-top: 2rem;
  padding: 1.5rem;
  border-top: 1px solid #E5E7EB;
}
