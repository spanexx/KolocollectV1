// CSS Variables for animations
@keyframes shimmer {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}

// Colors from design system
$primary-color: #6D28D9; // Deep Purple
$primary-dark: #5B21B6; // Darker purple
$primary-light: #C4B5FD; // Light purple

$secondary-color: #10B981; // Emerald Green
$secondary-dark: #059669; // Darker green
$secondary-light: #A7F3D0; // Light green

$accent-color: #F59E0B; // Amber
$accent-dark: #D97706; // Darker amber
$accent-light: #FCD34D; // Light amber

$destructive-color: #EF4444; // Red
$destructive-dark: #DC2626; // Darker red

